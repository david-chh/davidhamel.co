---
import PillarTag from "./PillarTag.astro";
import { formatDate } from "@/lib/utils";

interface Props {
  title: string;
  description: string;
  pillar: string;
  publishDate: Date;
  readingTime: number;
  slug: string;
  locale?: string;
}

const {
  title,
  description,
  pillar,
  publishDate,
  readingTime,
  slug,
  locale = "en-US",
} = Astro.props;
---

<a
  href={`/blog/${slug}`}
  class="block border border-navy-100 rounded-2xl bg-white p-6 shadow-card hover:shadow-card-hover hover:-translate-y-0.5 transition-all duration-200"
>
  <PillarTag pillar={pillar} class="mb-3" />
  <h3 class="text-[22px] font-semibold leading-tight text-navy-900 mb-2">
    {title}
  </h3>
  <p class="text-base text-navy-700 line-clamp-2 mb-4">
    {description}
  </p>
  <p class="text-sm text-navy-400">
    {formatDate(publishDate, locale)} &middot; {readingTime} min read
  </p>
</a>
