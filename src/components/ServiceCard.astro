---
interface Props {
  heading: string;
  description: string;
  href: string;
  linkText?: string;
}

const { heading, description, href, linkText = "Learn more" } = Astro.props;
---

<a
  href={href}
  class="block border border-navy-100 rounded-2xl bg-white p-8 lg:p-10 hover:border-teal-600 hover:shadow-card-hover transition-all duration-200 group"
>
  <h3 class="text-[22px] font-semibold text-navy-900 mb-3">{heading}</h3>
  <p class="text-navy-700 leading-relaxed mb-6">{description}</p>
  <span
    class="text-teal-600 font-medium group-hover:text-teal-700 transition-colors duration-100"
  >
    {linkText}
    <span
      class="inline-block ml-1 group-hover:translate-x-1 transition-transform duration-150"
      >&rarr;</span
    >
  </span>
</a>
