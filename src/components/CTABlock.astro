---
interface Props {
  heading?: string;
  subtext?: string;
  fullBleed?: boolean;
}

const { heading, subtext, fullBleed = false } = Astro.props;
---

<section
  class:list={["bg-navy-900 text-white", fullBleed ? "" : "rounded-3xl"]}
>
  <div
    class:list={[
      "mx-auto max-w-[1200px] px-5 sm:px-8 lg:px-10 py-16 lg:py-20 text-center",
      !fullBleed && "px-8 lg:px-16",
    ]}
  >
    {
      heading && (
        <h2 class="text-3xl sm:text-4xl lg:text-[44px] font-bold leading-tight text-white mb-4">
          {heading}
        </h2>
      )
    }
    {
      subtext && (
        <p class="text-lg text-white/85 max-w-xl mx-auto mb-8">{subtext}</p>
      )
    }
    <div class="flex flex-col items-center gap-4">
      <slot />
    </div>
  </div>
</section>
