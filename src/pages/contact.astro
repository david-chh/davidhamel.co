  <!-- Hero -->
  <section class="bg-white">
    <div
      class="mx-auto max-w-[1200px] px-5 sm:px-8 lg:px-10 pt-24 pb-8 sm:pt-28 sm:pb-12 lg:pt-32 lg:pb-16"
    >
