---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionWrapper from "@/components/SectionWrapper.astro";
import ServiceCard from "@/components/ServiceCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import BlogCard from "@/components/BlogCard.astro";
import headshot from "@/assets/images/headshot-david.jpg";
---

<BaseLayout
  title="David Hamel — Finanzcoach & Product Builder"
  description="Unabhängiger Finanzcoach und Product Builder. Ich helfe Expats in Deutschland, ihre Finanzen in den Griff zu bekommen. Apps und Produkte von der Strategie bis zum fertigen Code."
>
  <!-- Hero -->
  <section class="bg-warm-white">
    <div
      class="mx-auto max-w-[1200px] px-5 sm:px-8 lg:px-10 pt-24 pb-16 sm:pt-28 sm:pb-20 lg:pt-32 lg:pb-24"
    >
      <div class="flex flex-col lg:flex-row lg:items-center lg:gap-16">
        <!-- Text -->
        <div class="flex-1">
          <h1
            class="text-4xl sm:text-5xl lg:text-[72px] font-bold leading-[1.05] tracking-tight text-navy-900 mb-6"
          >
            Finanzcoach<br />und Produktleiter.
          </h1>
          <p
            class="text-lg sm:text-xl text-navy-700 max-w-[540px] mb-0 leading-relaxed"
          >
            Ich helfe bei Finanzplanung f&uuml;r Expats, Produktstrategie
            f&uuml;r Startups und KI-nativem Development f&uuml;r Unternehmen.
          </p>
        </div>
        <!-- Photo in rounded shape -->
        <div class="hidden lg:block flex-shrink-0">
          <div class="w-[340px] h-[400px] rounded-[2.5rem] overflow-hidden shadow-card">
            <Image
              src={headshot}
              alt="David Hamel"
              width={680}
              quality={85}
              class="w-full h-full object-cover object-[60%_50%]"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Three-Card Routing -->
  <SectionWrapper>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <ServiceCard
        heading="Finanzcoaching"
        description="F&uuml;r Expat-Fachkr&auml;fte in Deutschland, die Steuern, Versicherungen und Geldanlage navigieren. Auf Englisch, ohne Provisionen."
        href="/de/coaching"
        linkText="Mehr erfahren"
      />
      <ServiceCard
        heading="Produktf&uuml;hrung"
        description="F&uuml;r Startups und Scaleups, die erfahrenes Produktdenken auf Vertragsbasis brauchen."
        href="/de/product"
        linkText="Mehr erfahren"
      />
      <ServiceCard
        heading="AI Building"
        description="F&uuml;r KMU und Finanzdienstleister, die einen Produktmenschen brauchen, der ihre Branche versteht und ihre individuelle Software und KI-Agenten baut."
        href="/de/build"
        linkText="Mehr erfahren"
      />
    </div>
  </SectionWrapper>

  <!-- Selected Work -->
  <SectionWrapper background="navy-50">
    <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-10">
      Ausgewählte Projekte
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <ProjectCard
        name="Alba Wealth"
        oneLiner="KI-gestützte Finanzplanung für Expats"
        role="Gründer"
        badge="Venture"
        metric="Private Beta"
        logo="/logos/alba-wealth.svg"
      />
      <ProjectCard
        name="Ziggma"
        oneLiner="Portfoliomanagement für 35.000+ Anleger"
        role="Co-Founder & COO"
        badge="Venture"
        metric="€1,5 Mrd. verknüpfte Assets"
        logo="/logos/ziggma.png"
      />
      <ProjectCard
        name="Porsche Digital Lab"
        oneLiner="Blockchain-Produkt für die Herkunft klassischer Autos"
        role="Product Owner"
        badge="Auftrag"
        metric="€6,5 Mio. Finanzierung gesichert"
        logo="/logos/porsche-digital-lab.png"
      />
      <ProjectCard
        name="Digital Partners"
        oneLiner="IoT-Beratung & Venture Building, 30+ Projekte umgesetzt"
        role="Gründer & CEO"
        badge="Venture"
        metric="7 Entwickler, 3 Partner"
        logo="/logos/digital-partners.png"
      />
    </div>
    <div class="mt-8 text-center">
      <a
        href="/de/projects"
        class="text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100 group"
      >
        Alle Projekte ansehen
        <span
          class="inline-block ml-1 group-hover:translate-x-1 transition-transform duration-150"
          >&rarr;</span
        >
      </a>
    </div>
  </SectionWrapper>

  <!-- Latest from the Blog -->
  <SectionWrapper>
    <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-10">
      Neueste Beiträge
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <BlogCard
        title="Hello, World"
        description="Welcome to my blog. I'll be writing about expat finance, product building, and designing a life on your own terms."
        pillar="building-alba"
        publishDate={new Date("2026-02-16")}
        readingTime={3}
        slug="hello-world"
        locale="de-DE"
      />
    </div>
    <div class="mt-8 text-center">
      <a
        href="/de/blog"
        class="text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100 group"
      >
        Alle Beiträge lesen
        <span
          class="inline-block ml-1 group-hover:translate-x-1 transition-transform duration-150"
          >&rarr;</span
        >
      </a>
    </div>
  </SectionWrapper>
</BaseLayout>
