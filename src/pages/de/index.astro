---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionWrapper from "@/components/SectionWrapper.astro";
import ServiceCard from "@/components/ServiceCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import BlogCard from "@/components/BlogCard.astro";
import headshot from "@/assets/images/headshot-david.jpg";
---

<BaseLayout
  title="David Hamel — Finanzcoach & Product Builder"
  description="Unabhängiger Finanzcoach und Product Builder. Ich helfe Expats in Deutschland, ihre Finanzen in den Griff zu bekommen. Apps und Produkte von der Strategie bis zum fertigen Code."
>
  <!-- Hero -->
  <section class="bg-warm-white">
    <div
      class="mx-auto max-w-[1200px] px-5 sm:px-8 lg:px-10 pt-24 pb-16 sm:pt-28 sm:pb-20 lg:pt-32 lg:pb-24"
    >
      <div class="flex flex-col lg:flex-row lg:items-center lg:gap-16">
        <!-- Text -->
        <div class="flex-1">
          <h1
            class="text-4xl sm:text-5xl lg:text-[72px] font-bold leading-[1.05] tracking-tight text-navy-900 mb-6"
          >
            Finanzcoach<br />und Produktleiter.
          </h1>
          <p
            class="text-lg sm:text-xl text-navy-700 max-w-[540px] mb-0 leading-relaxed"
          >
            Ich helfe bei Finanzplanung f&uuml;r Expats, Produktstrategie
            f&uuml;r Startups und KI-nativem Development f&uuml;r Unternehmen.
          </p>
        </div>
        <!-- Photo in rounded shape -->
        <div class="hidden lg:block flex-shrink-0">
          <div class="w-[340px] h-[400px] rounded-[2.5rem] overflow-hidden shadow-card">
            <Image
              src={headshot}
              alt="David Hamel"
              width={680}
              quality={85}
              class="w-full h-full object-cover object-[60%_50%]"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Three-Card Routing -->
  <SectionWrapper>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <ServiceCard
        heading="Finanzcoaching"
        description="F&uuml;r Expat-Fachkr&auml;fte in Deutschland, die Steuern, Versicherungen und Geldanlage navigieren. Auf Englisch, ohne Provisionen."
        href="/de/coaching"
        linkText="Mehr erfahren"
      />
      <ServiceCard
        heading="Produktf&uuml;hrung"
        description="F&uuml;r Startups und Scaleups, die erfahrenes Produktdenken brauchen, ohne eine Vollzeitstelle zu besetzen."
        href="/de/product"
        linkText="Mehr erfahren"
      />
      <ServiceCard
        heading="App & Web Builds"
        description="F&uuml;r KMU und Finanzdienstleister, die einen Produktmenschen brauchen, der ihre Branche versteht und die Software selbst baut."
        href="/de/build"
        linkText="Mehr erfahren"
      />
    </div>
  </SectionWrapper>

  <!-- Who I Am -->
  <SectionWrapper>
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-10 lg:gap-16 items-center">
      <div class="lg:col-span-2">
        <Image
          src={headshot}
          alt="David Hamel — Finanzcoach und Product Builder"
          class="rounded-2xl w-full max-h-[500px] object-cover"
          widths={[400, 640, 800]}
          sizes="(max-width: 1024px) 100vw, 40vw"
        />
      </div>
      <div class="lg:col-span-3">
        <p class="text-lg text-navy-800 leading-relaxed mb-4">
          Ich bin David, unabhängiger Finanzcoach und Product Builder in
          Berlin. Ich habe in über 15 Ländern gelebt und gearbeitet,
          Fintech-Produkte für Zehntausende Nutzer gebaut und Produktteams bei
          Startups und Konzernen geleitet.
        </p>
        <p class="text-lg text-navy-800 leading-relaxed mb-6">
          Heute coache ich Expats durch das deutsche Finanzsystem, biete
          Startups Produktf&uuml;hrung und baue Apps und Websites f&uuml;r
          Unternehmen, mit besonderem Fokus auf Fintech und
          Finanzdienstleistungen.
        </p>
        <a
          href="/de/about"
          class="text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100 group"
        >
          Mehr über mich
          <span
            class="inline-block ml-1 group-hover:translate-x-1 transition-transform duration-150"
            >&rarr;</span
          >
        </a>
      </div>
    </div>
  </SectionWrapper>

  <!-- Selected Work -->
  <SectionWrapper background="navy-50">
    <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-10">
      Ausgewählte Projekte
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <ProjectCard
        name="Alba Wealth"
        oneLiner="KI-gestützte Finanzplanung für Expats"
        role="Gründer"
        badge="Venture"
        logo="/logos/alba-wealth.svg"
      />
      <ProjectCard
        name="Ziggma"
        oneLiner="Portfoliomanagement für 35.000+ Anleger"
        role="Co-Founder & COO"
        badge="Venture"
        metric="€1,5 Mrd. verknüpfte Assets"
        logo="/logos/ziggma.png"
      />
      <ProjectCard
        name="Porsche Digital Lab"
        oneLiner="Blockchain-Produkt für die Herkunft klassischer Autos"
        role="Product Owner"
        badge="Auftrag"
        metric="€6,5 Mio. Finanzierung gesichert"
        logo="/logos/porsche-digital-lab.png"
      />
      <ProjectCard
        name="Digital Partners"
        oneLiner="IoT-Beratung & Venture Building, 27 Projekte umgesetzt"
        role="Gründer & CEO"
        badge="Venture"
        metric="7 Entwickler, 3 Partner"
        logo="/logos/digital-partners.png"
      />
    </div>
    <div class="mt-8 text-center">
      <a
        href="/de/projects"
        class="text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100 group"
      >
        Alle Projekte ansehen
        <span
          class="inline-block ml-1 group-hover:translate-x-1 transition-transform duration-150"
          >&rarr;</span
        >
      </a>
    </div>
  </SectionWrapper>

  <!-- Latest from the Blog -->
  <SectionWrapper>
    <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-10">
      Neueste Beiträge
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <BlogCard
        title="Hello, World"
        description="Welcome to my blog. I'll be writing about expat finance, product building, and designing a life on your own terms."
        pillar="building-alba"
        publishDate={new Date("2026-02-16")}
        readingTime={3}
        slug="hello-world"
        locale="de-DE"
      />
    </div>
    <div class="mt-8 text-center">
      <a
        href="/de/blog"
        class="text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100 group"
      >
        Alle Beiträge lesen
        <span
          class="inline-block ml-1 group-hover:translate-x-1 transition-transform duration-150"
          >&rarr;</span
        >
      </a>
    </div>
  </SectionWrapper>

  <!-- Newsletter CTA -->
  <section class="bg-navy-900">
    <div class="mx-auto max-w-[1200px] px-5 sm:px-8 lg:px-10 py-16 lg:py-20">
      <div class="max-w-xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          Impulse zu Geld, Bauen und Leben im Ausland.
        </h2>
        <p class="text-lg text-white/85 mb-8">
          Ich schreibe über Expat-Finanzen, Produktentwicklung und ein
          selbstbestimmtes Leben. Kein Spam, kein Blabla. Ehrliche Gedanken.
        </p>
        <form class="flex flex-col sm:flex-row gap-3" onsubmit="return false;">
          <input
            type="email"
            placeholder="Deine E-Mail-Adresse"
            class="flex-1 h-[52px] px-4 bg-white/10 border border-white/20 rounded-lg text-white placeholder:text-white/40 text-sm focus:outline-none focus:border-teal-500"
            aria-label="Deine E-Mail-Adresse"
          />
          <button
            type="submit"
            class="h-[52px] px-6 bg-teal-600 text-white font-semibold rounded-lg hover:bg-teal-700 transition-colors duration-150 text-sm"
          >
            Abonnieren <span>&rarr;</span>
          </button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>
