---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionWrapper from "@/components/SectionWrapper.astro";
import NewsletterCTA from "@/components/NewsletterCTA.astro";
---

<BaseLayout
  title="Kontakt — David Hamel"
  description="Buche ein kostenloses Erstgespr&auml;ch oder nimm Kontakt auf. Finanzcoaching f&uuml;r Expats, Produktf&uuml;hrung f&uuml;r Startups, App- und Web-Builds f&uuml;r Unternehmen."
>
  <!-- Hero -->
  <section class="bg-white">
    <div
      class="mx-auto max-w-[1200px] px-5 sm:px-8 lg:px-10 pt-24 pb-8 sm:pt-28 sm:pb-12 lg:pt-32 lg:pb-16"
    >
      <h1
        class="text-4xl sm:text-5xl lg:text-[56px] font-bold leading-tight tracking-tight text-navy-900 mb-4"
      >
        Lass uns sprechen.
      </h1>
      <p class="text-lg sm:text-xl text-navy-700 max-w-[580px]">
        Ob du Finanzcoaching brauchst, Produktf&uuml;hrung oder jemanden, der
        dein n&auml;chstes Projekt baut &mdash; das erste Gespr&auml;ch ist
        kostenlos.
      </p>
    </div>
  </section>

  <!-- Calendly -->
  <SectionWrapper>
    <div class="max-w-[720px] mx-auto">
      <h2
        class="text-2xl sm:text-[28px] font-semibold text-navy-900 mb-6 text-center"
      >
        Buche ein 30-minütiges Gespräch
      </h2>
      <div
        class="min-h-[200px] bg-navy-50 rounded-2xl border border-navy-100 flex items-center justify-center"
      >
        <p class="text-navy-400 text-center px-6">
          Calendly-Buchung wird bald verfügbar sein.
        </p>
      </div>
    </div>
  </SectionWrapper>

  <!-- Direct Contact -->
  <SectionWrapper>
    <div class="max-w-[720px] mx-auto text-center">
      <h2
        class="text-2xl sm:text-[28px] font-semibold text-navy-900 mb-6"
      >
        Oder schreib mir direkt
      </h2>
      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a
          href="mailto:david.ch.hamel@gmail.com"
          class="inline-flex items-center gap-2 text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          david.ch.hamel@gmail.com
        </a>
        <a
          href="https://linkedin.com/in/david-hamel-11baa841"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100"
        >
          <svg
            class="w-5 h-5"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
          LinkedIn
        </a>
      </div>
    </div>
  </SectionWrapper>

  <!-- Newsletter CTA -->
  <NewsletterCTA
    heading="Impulse zu Geld, Bauen und Leben im Ausland."
    subtext="Ich schreibe über Expat-Finanzen, Produktentwicklung und ein selbstbestimmtes Leben. Kein Spam, kein Blabla — ehrliche Gedanken."
    placeholder="Deine E-Mail-Adresse"
    buttonText="Abonnieren"
  />
</BaseLayout>
