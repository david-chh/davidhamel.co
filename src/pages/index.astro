---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionWrapper from "@/components/SectionWrapper.astro";
import ServiceCard from "@/components/ServiceCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
import BlogCard from "@/components/BlogCard.astro";
import headshot from "@/assets/images/headshot-david.jpg";
---

<BaseLayout
  title="David Hamel — Financial Planning Coach & Product Builder"
  description="Independent financial planning coach and product builder. Helping expats in Germany take control of their money. Building apps and products from strategy to shipped code."
>
  <!-- Hero -->
  <section class="bg-warm-white">
    <div
      class="mx-auto max-w-[1200px] px-5 sm:px-8 lg:px-10 pt-24 pb-16 sm:pt-28 sm:pb-20 lg:pt-32 lg:pb-24"
    >
      <div class="flex flex-col lg:flex-row lg:items-center lg:gap-16">
        <!-- Text -->
        <div class="flex-1">
          <h1
            class="text-4xl sm:text-5xl lg:text-[72px] font-bold leading-[1.05] tracking-tight text-navy-900 mb-6"
          >
            Finance Coach<br />and Product Lead.
          </h1>
          <p
            class="text-lg sm:text-xl text-navy-700 max-w-[540px] mb-0 leading-relaxed"
          >
            I help with financial planning for expats, product strategy for
            startups and AI-native development for businesses.
          </p>
        </div>
        <!-- Photo in rounded shape -->
        <div class="hidden lg:block flex-shrink-0">
          <div class="w-[340px] h-[400px] rounded-[2.5rem] overflow-hidden shadow-card">
            <Image
              src={headshot}
              alt="David Hamel"
              width={680}
              quality={85}
              class="w-full h-full object-cover object-[60%_50%]"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Three-Card Routing -->
  <SectionWrapper>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <ServiceCard
        heading="Financial Coaching"
        description="For expat professionals in Germany navigating taxes, insurance, and investing. In plain English, with no commissions."
        href="/coaching"
        linkText="Learn more"
      />
      <ServiceCard
        heading="Product Leadership"
        description="For startups and scaleups that need senior product thinking on a contract basis."
        href="/product"
        linkText="Learn more"
      />
      <ServiceCard
        heading="AI Building"
        description="For SMBs and financial services firms that need a product person who understands their world and builds their custom software and AI agents."
        href="/build"
        linkText="Learn more"
      />
    </div>
  </SectionWrapper>

  <!-- Selected Work -->
  <SectionWrapper background="navy-50">
    <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-10">
      Selected Work
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <ProjectCard
        name="Alba Wealth"
        oneLiner="AI-powered financial planning for expats"
        role="Founder"
        badge="Venture"
        metric="Private Beta"
        logo="/logos/alba-wealth.svg"
      />
      <ProjectCard
        name="Ziggma"
        oneLiner="Portfolio management for 35,000+ investors"
        role="Co-Founder & COO"
        badge="Venture"
        metric="€1.5bn linked assets"
        logo="/logos/ziggma.png"
      />
      <ProjectCard
        name="Porsche Digital Lab"
        oneLiner="Blockchain product for classic car provenance"
        role="Product Owner"
        badge="Contract"
        metric="€6.5M funding secured"
        logo="/logos/porsche-digital-lab.png"
      />
      <ProjectCard
        name="Digital Partners"
        oneLiner="IoT consulting & venture building, 30+ projects delivered"
        role="Founder & CEO"
        badge="Venture"
        metric="7 engineers, 3 partners"
        logo="/logos/digital-partners.png"
      />
    </div>
    <div class="mt-8 text-center">
      <a
        href="/projects"
        class="text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100 group"
      >
        View all projects
        <span
          class="inline-block ml-1 group-hover:translate-x-1 transition-transform duration-150"
          >&rarr;</span
        >
      </a>
    </div>
  </SectionWrapper>

  <!-- Latest from the Blog -->
  <SectionWrapper>
    <h2 class="text-3xl sm:text-4xl font-bold text-navy-900 mb-10">
      Latest from the Blog
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <BlogCard
        title="Hello, World"
        description="Welcome to my blog. I'll be writing about expat finance, product building, and designing a life on your own terms."
        pillar="building-alba"
        publishDate={new Date("2026-02-16")}
        readingTime={3}
        slug="hello-world"
      />
    </div>
    <div class="mt-8 text-center">
      <a
        href="/blog"
        class="text-teal-600 font-medium hover:text-teal-700 transition-colors duration-100 group"
      >
        Read all posts
        <span
          class="inline-block ml-1 group-hover:translate-x-1 transition-transform duration-150"
          >&rarr;</span
        >
      </a>
    </div>
  </SectionWrapper>
</BaseLayout>
